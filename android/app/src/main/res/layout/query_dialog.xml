<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/tfe_color_primary"
        android:foregroundTint="@color/tfe_color_primary" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Can you verify this?"
        android:textColor="@color/tfe_color_accent"
        android:textSize="24sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_wave" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:scrollbars="vertical"
        android:text="An organization claimed to handle the following alert issues by you on date which included the following"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corner"
        android:text="Public"
        android:padding="10dp"
        android:backgroundTint="#43a047"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"/>

    <TextView
        android:id="@+id/textview_name1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corner"
        android:text="Private"
        android:padding="10dp"
        android:backgroundTint="#ffc107"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="360dp"/>

    <TextView
        android:id="@+id/textview_name2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corner"
        android:text="Unreported"
        android:backgroundTint="#2196f3"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="415dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:scrollbars="vertical"
        android:text="Has this alert been handled?"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/tfe_color_primary"
        android:text="Yes"
        android:textColor="@color/tfe_color_accent"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/tfe_color_primary"
        android:text="No"
        android:textColor="@color/tfe_color_accent"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/tfe_color_primary"
        android:text="Can't Verify"
        android:textColor="@color/tfe_color_accent"
        android:layout_marginBottom="25dp"/>


</RelativeLayout>